---
import { Icon } from "astro-icon/components";
//import { Iconvisa } from "../icons/icons-visa";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Complete Application",
    description:
      "Complete the online application on our easy-fill-out form with all the information about your trip, and hit Submit.",
    icon: "mdi:form",
  },
  {
    title: "Verify Information",
    description:
      "Verify your application and make sure you provide the correct details. Whenever in doubt, just contact us for help. We’re here 24/7.",
    icon: "mdi:check",
  },
  {
    title: "Service Payment",
    description:
      "Make the payment for one of our visa consulting services to get started.",
    icon: "mdi:credit-card",
  },
  {
    title: "Attend Your Interview",
    description:
      "Your personal visa expert helps you schedule your Embassy interview (if necessary).",
    icon: "mdi:conversation",
  },
  {
    title: "Get Your Visa",
    description:
      "We’re here to support you along the way, streamline the entire process, and boost your visa approval chances.",
    icon: "mdi:web",
  },
];
---

<ContentSection title="The process is simple " id="features">
  <Fragment slot="lead">
    Our process is very <span class="text-primary">simple</span>. Just <span
      class="text-primary"
    >
      follow
    </span> each step and you will be applying for the <span
      class="text-primary">visa</span
    > you want quickly .
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
